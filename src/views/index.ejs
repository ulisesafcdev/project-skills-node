<!-- ----------------------------------------------------------------------------- -->

<div class="container mt-5 mb-5">
    <div class="row">

        <div class="col-md-9">

            <table class="table table-bordered">

                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Skill Name</th>
                        <th>Level</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <% datos.forEach((el) => { %>

                        <tr>
                            <td><%= el._id %></td>
                            <td><%= el.nombre %></td>
                            <td><%= el.nivel %></td>
                            <td class="text-center">
                                <a href="/detalle/<%= el._id%>" class="btn btn-sm btn-dark"><i class='bx bxs-cog' ></i></a>
                            </td>
                        </tr>

                    <% }) %>

                </tbody>

            </table>

        </div>

        <div class="col-md-3">
            <form action="/guardar" method="POST">
                <div class="card">
                    <div class="card-header">
                        <h3>Nueva Skill</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Name Skill" name="nombre">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Dominate" name="nivel">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-success btn-block" type="submit">Guardar Skill</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

<div class="jumbotron mb-0 bg-dark rounded-0">
    <p class="text-center text-light">
        Hecho por <a href="https://github.com/ulisesafcdev" target="_blank" class="text-light">ULISESAFCDEV</a> &copy; 2021 
    </p>
</div>

